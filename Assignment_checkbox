        document.addEventListener("DOMContentLoaded",function(){
            let cid=document.getElementById("chbox");
            let bid=document.getElementById("btn");
            cid.addEventListener("click",function(){
                if(cid.checked) 
                    btn.disabled=false;
                else btn.disabled=true;
            })

            })
    </script>
